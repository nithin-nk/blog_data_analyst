# Blog Data Analyst - Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# LLM API Keys
# ===========================================

# Google Gemini API Key (Primary LLM)
# Get yours at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API Key (Secondary LLM for dual quality check)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Image Generation (Banana/Nano)
# ===========================================

# Banana API Key
# Get yours at: https://www.banana.dev/
BANANA_API_KEY=your_banana_api_key_here

# Banana Model Key (for specific model deployment)
BANANA_MODEL_KEY=your_banana_model_key_here

# ===========================================
# Environment Configuration
# ===========================================

# Environment mode: dev, test, prod
ENVIRONMENT=dev

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===========================================
# Rate Limiting & Retries
# ===========================================

# Maximum retries for API calls
MAX_RETRIES=3

# Delay between retries (seconds)
RETRY_DELAY=2

# Rate limit for web scraping (requests per minute)
SCRAPING_RATE_LIMIT=10

# ===========================================
# Content Generation Settings
# ===========================================

# Maximum refinement iterations
MAX_REFINEMENT_ITERATIONS=3

# Quality score threshold (1-10) to proceed with image generation
QUALITY_THRESHOLD=8

# ===========================================
# File Paths (Optional - defaults used if not set)
# ===========================================

# Input directory for YAML files
# INPUT_DIR=inputs

# Output directory for generated content
# OUTPUT_DIR=outputs
